#!/bin/bash

set -e

SCRIPTPATH="$(dirname -- "$(realpath -- "$0")")"
CDC_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/cdc"
SERVICES_DIR="$(realpath -- "$SCRIPTPATH/../services")"

if [ ! -d "$SERVICES_DIR" ]; then
    echo "Error: services directory not found at $SERVICES_DIR"
    exit 1
fi

find "$SERVICES_DIR" -mindepth 2 -type f -name '*.yaml' | while read -r path; do
    rel="${path#$SERVICES_DIR/}"
    rel="${rel%.yaml}"
    echo "$rel"
done
